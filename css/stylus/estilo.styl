azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24

body
	background #e8e8e8e
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	box-shadow 0 3px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 3

	.logo
		border-right 2px solid azul
		width 60px
		float left

		img
			width 52px

	.titular
		margin 0 80px 0 70px
		
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
			
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em
			text-decoration none
			text-shadow 1px 1px 0 black

	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 69

			img
				width 50px
				border-radius 50%

		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%
			z-index 0


.posts
	border-bottom 3px solid #3E97D1
	display inline-block
	margin 20px 31px
	

	.post
		.descripcion
			.imagen
				img
					border 2px solid green
					float left
					margin 5px 20px 
					width 150px
				
			.detalles
				.autor
					a
						text-decoration none
						color black
				.tag
					text-decoration none
					color black
		.acciones
			
			.votos
				.up
					text-decoration none
					color black
				.total
					
				.down
					text-decoration none
					color black	
			.datos
				
				.comentarios
					
				.estrellita
					text-decoration none
					color black				
				
nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		overflow-y hidden
		padding 0
		white-space nowrap

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0px 0.2em
				text-decoration none
				
				
				&:hover
					background rgba(black,0.1)

.left
	float left

.right
	float right

footer
	background #C3CF3A
	max-widht 100%
	border 1px solid red
	padding 40px


	h3
		text-align center