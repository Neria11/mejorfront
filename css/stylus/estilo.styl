azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'iconitos'; /*Ã‰ste es el nombre, puede cambiarse*/
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #e8e8e8e
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 3

	.logo
		border-right 2px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 80px 0 70px
		
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
			
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0 black

			&:before
				font-family "iconitos"
				content "\e601"
				display inline-block
				margin 0 3px 0 0
				text-shadow none

	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 69

			img
				border-radius 50%
				width 50px

		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%
			z-index 0

			&:after
				font-family "iconitos"
				display block
				content "\e602" 
				margin 1px 0 0 1px
				text-shadow 1px 1px 0 black

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.descripcion
			
			.imagen
				float left

				img
					height 160px
					vertical-align top
					width 120px
				
			.detalles
				height 160px
				margin-left 130px

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

				.autor
					margin 0.5em 0 2em 0
					a
						text-decoration none
						
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.fecha
					float right
					margin 0 1em 0 0

		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em			
			
			.votos
				float left

				.up
				.down
					font-size 1.5em
					text-decoration none

					&:before
						font-family "iconitos"
						vertical-align middle

				.up
					color red

					&:before
						content "\e602"

				.down
					color green

					&:before
						content "\e603"
									
				.total				
					text-decoration none	

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					color #FCB920
					text-decoration none
					font-size 1.5em
					vertical-align middle

					&:before
						font-family "iconitos"
						content "\e600"
				
nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap

		&::-webkit-scrollbar
			display none

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0px 0.2em
				text-decoration none
				
				
				&:hover
					background rgba(black,0.1)


@media screen and (min-width: 768px)

	header
		
		.titular
			
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative

				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top

			&:nth-child(odd)
				margin-right 1.2%
				margin-left 1.2%

		  /*&:nth-child(odd)
				background azul*//*Se usa even para pares y odd ara impares
				al hacer 2 columnas en responsive design*/

	